{
  "name": "root",
  "version": "1.10.0",
  "private": true,
  "engines": {
    "node": "22"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "dotenv -e .env -- cross-env TURBO_ENV_MODE=loose NODE_OPTIONS=--no-node-snapshot turbo run start --filter=backend",
    "dev": "dotenv -e .env -- cross-env TURBO_ENV_MODE=loose NODE_OPTIONS=--no-node-snapshot turbo run start --filter=backend --filter=app",
    "build": "turbo run build",
    "build:dockerfile": "bash ./scripts/update-Dockerfile.sh",
    "tsc": "turbo run tsc",
    "export-dynamic": "echo \"Command moved to dynamic-plugins/package.json\"",
    "export-dynamic:clean": "echo \"Command moved to dynamic-plugins/package.json\"",
    "copy-dynamic-plugins": "echo \"Command moved to dynamic-plugins/package.json\"",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "test:backend": "yarn test --filter=backend",
    "test:backend:ai": "yarn test --filter=backend -- --runTestsByPath src/modules/aiOrchestrator/service/providers/__tests__/volcengineProviders.test.ts",
    "test:backend:ai:integration": "dotenv -e .env -- cross-env RUN_AI_INTEGRATION_TESTS=true yarn workspace backend test:ai:integration",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "lint": "turbo run lint",
    "monorepo:check": "sherif && manypkg check",
    "monorepo:fix": "sherif --fix --no-install && manypkg fix && yarn dedupe",
    "lint-staged": "lint-staged -p 10",
    "prettier:check": "turbo run prettier:check",
    "prettier:fix": "turbo run prettier:fix",
    "new": "backstage-cli new --scope internal",
    "repo:fix": "backstage-cli repo fix --publish",
    "versions:metadata": "node ./scripts/update-metadata.mjs",
    "versions:bump": "node ./scripts/update-backstage.mjs",
    "rulesync:generate": "rulesync generate",
    "rulesync:import:cursor": "rulesync import --targets cursor",
    "rulesync:import:claude": "rulesync import --targets claudecode",
    "desktop:build": "yarn workspace @smartops/desktop build",
    "desktop:start": "yarn workspace @smartops/desktop dev",
    "desktop:dev": "yarn workspace @smartops/desktop dev",
    "desktop:pack": "yarn workspace @smartops/desktop build",
    "desktop:dist": "yarn workspace @smartops/desktop build"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "0.34.5",
    "@backstage/frontend-test-utils": "0.4.1",
    "@ianvs/prettier-plugin-sort-imports": "4.7.0",
    "@manypkg/cli": "0.25.1",
    "cross-env": "7.0.3",
    "dotenv-cli": "7.4.1",
    "glob": "11.1.0",
    "husky": "8.0.3",
    "jsdom": "26.1.0",
    "lint-staged": "15.5.2",
    "node-gyp": "10.3.1",
    "rulesync": "3.34.0",
    "sherif": "1.10.0",
    "turbo": "2.7.6"
  },
  "resolutions": {
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@aws-sdk/util-utf8-browser": "npm:@smithy/util-utf8@~2",
    "@kubernetes/client-node@npm:0.20.0/jsonpath-plus": "^10.3.0",
    "@backstage/plugin-permission-backend": "0.7.3",
    "@backstage/plugin-catalog-react": "1.21.3",
    "refractor@npm:3.6.0/prismjs": "^1.30.0",
    "@backstage/plugin-auth-node": "0.6.10",
    "@backstage/backend-plugin-api": "1.5.0"
  },
  "jest": {
    "testTimeout": 20000
  },
  "packageManager": "yarn@3.8.7"
}
