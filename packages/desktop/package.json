{
  "name": "@smartops/desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "electron dist/main.js",
    "dev": "tsc -p tsconfig.json --watch",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder"
  },
  "dependencies": {
    "auto-launch": "5.0.6"
  },
  "devDependencies": {
    "@types/node": "22.13.4",
    "electron": "30.1.2",
    "electron-builder": "24.13.3",
    "typescript": "5.7.3"
  },
  "build": {
    "appId": "com.smartops.desktop",
    "productName": "SmartOps",
    "artifactName": "${productName}-${version}.${ext}",
    "files": [
      "dist/**/*",
      "config/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist-builder"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
