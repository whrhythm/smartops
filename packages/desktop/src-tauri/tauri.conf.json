{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SmartOps",
  "version": "0.1.0",
  "identifier": "com.smartops.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "",
    "frontendDist": "../dist",
    "devtools": true
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "SmartOps",
        "label": "main",
        "width": 1280,
        "height": 840,
        "minWidth": 980,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https: wss:"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "id": "main-tray"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../config/*"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "notification": {
      "all": true
    },
    "clipboard-manager": {
      "all": true
    },
    "dialog": {
      "all": true
    },
    "fs": {
      "all": true,
      "scope": {
        "allow": ["$APPDATA/**", "$RESOURCE/**", "$TEMP/**", "**"]
      }
    },
    "autostart": {
      "all": true
    },
    "store": {},
    "shell": {
      "open": true
    }
  }
}
